<Window x:Class="WpfApp4.Aurz"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp4"
        mc:Ignorable="d"
        Title="Aurz" Height="450" Width="800" >
    <Grid Background="#2000">

            <StackPanel>
                    <StackPanel>
                        <TextBlock Text="логин" HorizontalAlignment="Center" FontSize="20" Margin="10"/>
                        <TextBox x:Name="logintxt" Width="100" Margin="10"/>
                        <TextBlock Text="пароль"  HorizontalAlignment="Center" FontSize="20" Margin="10"  />
                        <PasswordBox x:Name="passwordtxt" Width="100"  Margin="10"/>
                    </StackPanel>

                <Button Width="200" Height="25" Content="Войти" FontSize="15" Margin="10" Click="Button_Click" />
                <Button Width="200" Height="25" Content="Регистрация" FontSize="15" Margin="10" Click="Button_Click_1" />

            </StackPanel>
    </Grid>
</Window>
